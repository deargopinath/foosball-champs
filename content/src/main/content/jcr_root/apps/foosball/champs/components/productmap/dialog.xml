<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    title="Product Map - MultiFieldPanel"
    width="800"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="Add Products">
                <items jcr:primaryType="cq:WidgetCollection">
                    <map
                        jcr:primaryType="cq:Widget"
                        hideLabel="false"
                        name="./map"
                        title="Map"
                        xtype="multifield">
                        <fieldConfig
                            jcr:primaryType="cq:Widget"
                            border="true"
                            hideLabel="true"
                            layout="form"
                            padding="10px"
                            width="1000"
                            xtype="rfmultipanel">
                            <items jcr:primaryType="cq:WidgetCollection">
                                <productName
                                    jcr:primaryType="cq:Widget"
                                    dName="productName"
                                    fieldLabel="Product Name"
                                    xtype="textfield"/>
                                <price
                                    jcr:primaryType="cq:Widget"
                                    dName="price"
                                    fieldLabel="Price(â‚¹)"
                                    xtype="textfield"/>
                                <url
                                    jcr:primaryType="cq:Widget"
                                    dName="url"
                                    fieldLabel="Link"
                                    xtype="pathfield"/>
                                <newTab
                                    jcr:primaryType="cq:Widget"
                                    dName="newTab"
                                    fieldLabel="Open in a new  Tab ?"
                                    xtype="checkbox"/>
                                <imageloc
                                    jcr:primaryType="cq:Widget"
                                    dName="imageloc"
                                    fieldLabel="Product Image"
                                    xtype="pathfield"/>
                                <description
                                    jcr:primaryType="cq:Widget"
                                    dName="description"
                                    fieldLabel="Description"
                                    xtype="textarea"/>
                            </items>
                        </fieldConfig>
                    </map>
                </items>
            </tab1>
        </items>
    </items>
</jcr:root>
